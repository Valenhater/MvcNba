@model List<MvcNba.Models.ModelVistaProximosPartidos>

@{
    ViewData["Title"] = "Reservar Entradas";
}

<style>
    .container {
        margin-top: 50px;
    }

    .card {
        margin-bottom: 30px;
    }

    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        text-align: center;
    }

    .card-title {
        font-size: 24px;
        font-weight: bold;
    }

    .btn-reservar {
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 20px;
        padding: 10px 20px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-reservar:hover {
            background-color: #0056b3;
        }
</style>
<div class="container">
    <h1 class="text-center">Próximos Partidos</h1>
    <div class="row">
        @foreach (var partido in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img class="card-img-top" src="@HelperPathProvider.MapUrlPath(partido.ImagenPartido, Folders.Partidos)" alt="Imagen del Partido" />
                    <div class="card-body">
                        <h5 class="card-title">@partido.EquipoLocal vs @partido.EquipoVisitante</h5>
                        <p class="card-text">@partido.Fecha.ToShortDateString() - @partido.Fecha.ToShortTimeString()</p>
                        <p class="card-text">Precio de la Entrada: $@partido.PrecioEntrada</p>
                        <p class="card-text">Plazas Disponibles: @partido.PlazasDisponibles</p>
                        <a href="@Url.Action("Reservar", "Entradas", new { id = partido.IdPartido })" class="btn btn-reservar">Reservar Entrada</a>
                        <a href="@Url.Action("Reservar", "Entradas", new { id = partido.IdPartido })" class="btn btn-reservar">Guardar en Carrito</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
