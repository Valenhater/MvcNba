@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using MvcNba.Extensions

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcNba</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcNba.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <div>
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/varios/logonba.webp" style="width:100px;height:70px" /></a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Partidos" asp-action="PartidosJugados">Partidos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Partidos" asp-action="Index">Equipos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Jugadores" asp-action="Jugadores">Jugadores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Entradas" asp-action="VistaReservaEntradas">Entradas</a>
                        </li>
                        @{
                            var currentUser = HttpContextAccessor.HttpContext.Session.GetObject<Usuario>("CurrentUser");
                            if (currentUser != null)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color:green">
                                        @currentUser.Nombre
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" href="@Url.Action("PartidosFavoritos", "Entradas")">Carrito V1</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("EntradasReservadas", "Entradas")">Reservas</a></li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("VerPerfil", "Usuarios", new { id = currentUser.IdUsuario })">Ver Perfil</a>
                                        </li>
                                        <li><a class="dropdown-item" href="@Url.Action("Logout", "Usuarios")">Cerrar sesión</a></li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Login">Iniciar Sesion</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: #222;">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: white; text-decoration: none; font-weight: bold;">Privacidad</a>
                </div>
                <div class="col-md-3">
                    <a href="https://twitter.com/NBA">
                        <img src="~/varios/twitter.png" alt="Twitter NBA" style="width:40px;height:40px">
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="https://www.youtube.com/user/NBA">
                        <img src="~/varios/youtube.png" alt="YouTube NBA" style="width:70px;height:40px">
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="https://www.tiktok.com/nba">
                        <img src="~/varios/tiktok.webp" alt="TikTok NBA" style="width:70px;height:70px">
                    </a>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
