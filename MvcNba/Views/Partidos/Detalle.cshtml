@model MvcNba.Models.Equipo

@{
    ViewData["Title"] = "Detalle";
}

<style>
    body {
        background-image: url("@HelperPathProvider.MapUrlPath(Model.ImagenFondo, Folders.Fondos)");
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .detalle-container {
        background-color: #fff;
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .detalle-title {
        font-size: 48px;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
        text-align: center;
    }

    .detalle-info {
        font-size: 24px;
        color: #666;
        margin-bottom: 20px;
    }

    .detalle-image {
        width: 100%;
        max-width: 500px;
        border-radius: 15px;
        margin: 20px auto;
        display: block;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .btn-back {
        display: block;
        width: 200px;
        margin: 0 auto;
        padding: 15px 20px;
        font-size: 24px;
        font-weight: bold;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 10px;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s;
    }

        .btn-back:hover {
            background-color: #0056b3;
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="detalle-container">
                <h1 class="detalle-title">Detalle del Equipo</h1>
                <div class="detalle-info">
                    <strong>Nombre:</strong> @Model.Nombre
                </div>
                <div class="detalle-info">
                    <strong>Ciudad:</strong> @Model.Ciudad
                </div>
                <div class="detalle-info">
                    <strong>Fundación:</strong> @Model.Fundacion.ToShortDateString()
                </div>
                <img class="detalle-image" src="@HelperPathProvider.MapUrlPath(Model.Imagen, Folders.Equipos)" alt="@Model.Nombre" />
                <a asp-action="Index" class="btn btn-back">Volver al Listado</a>
            </div>
        </div>
    </div>
</div>
