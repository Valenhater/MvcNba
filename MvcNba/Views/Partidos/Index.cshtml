@model List<Equipo>

<style>
    .team-link {
        display: block;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        margin-bottom: 20px;
        height: 340px; /* Ajustamos la altura de las cajas */
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .team-link:hover {
            transform: scale(1.05);
        }

    .team-image {
        width: 60%;
        height: auto;
        object-fit: cover;
    }

    .container {
        padding-top: 20px;
        padding-bottom: 50px;
    }

    .titulo {
        font-size: 64px;
        font-weight: bold;
        color: #333;
        background-color: #f0f0f0;
        padding: 20px;
        text-align: center;
        margin-bottom: 40px;
        border-radius: 15px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }
</style>
<div class="container">
    <h1 class="titulo">Equipos</h1>
    <div class="row justify-content-center">
        @foreach (var equipo in Model)
        {
            <div class="col-md-4">
                <a asp-controller="Partidos" asp-action="Detalle" asp-route-id="@equipo.IdEquipo" class="team-link">
                    <img class="team-image" src="@HelperPathProvider.MapUrlPath(equipo.Imagen, Folders.Equipos)" alt="@equipo.Nombre" />
                </a>
            </div>
        }
    </div>
</div>
